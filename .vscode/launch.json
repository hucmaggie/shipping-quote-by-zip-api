{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Uvicorn: FastAPI (app.py)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app:app",
        "--reload",
        "--port",
        "8000"
      ],
      "jinja": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Uvicorn: FastAPI (Docker)",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "docker-build",
      "platform": "python",
      "python": {
        "pathMappings": [
          {
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app"
          }
        ],
        "projectType": "fastapi",
        "module": "uvicorn",
        "args": [
          "app:app",
          "--host",
          "0.0.0.0",
          "--port",
          "8000"
        ]
      }
    }
  ]
}